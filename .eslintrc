{
    "extends": ["standard"],
    "rules": {
        "no-unused-expressions": "off",
        "comma-dangle": ["error", "always-multiline"],
        "no-multi-spaces": ["error", { "ignoreEOLComments": true }],
        "no-console": "error"
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".ts", ".cjs", ".mjs"]
            }
        }
    }
}
